{% assign programming_skills = site.data.data.programming_skills %}
{% assign libraries = site.data.data.libraries %}
{% assign platforms = site.data.data.platforms %}
{% assign version_controls = site.data.data.version_controls %}

{% if programming_skills %}
<section class="skills-section section">

  <h3 class="section-title">
    <span class="fa-stack fa-xs">
      <i class="fas fa-wrench fa-stack-1x fa-inverse"></i>
    </span>
    {{ site.data.data.programming_skills_title }}
  </h3>

  <div class="skillset">
  <table class="table">
  <tbody>
{% for skill in programming_skills %}    <tr>
      <td width="25%" scope="row">{{ skill.name }}</td>
      {% assign p = skill.level | times: 100 | divided_by: site.data.data.programming_skills_maxlevel %}
      <td width="75%"><div class="progress"><div class="progress-bar" role="progressbar" style="width: {{ p }}%;" aria-valuenow="{{ skill.level }}" aria-valuemin="0" aria-valuemax="{{ site.data.data.programming_skills_maxlevel }}">{{ skill.level }} / {{ site.data.data.programming_skills_maxlevel }}</div></div></td>
    </tr>
{% endfor %}
  </tbody>
</table>
</section><!--//skills-section-->
{% endif %}


